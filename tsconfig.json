{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    // "allowImportingTsExtensions": true,
    // "noEmit": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["./src/"],
  "exclude": ["dist", "node_modules", "test", "coverage", "jest.config.js"]
}
